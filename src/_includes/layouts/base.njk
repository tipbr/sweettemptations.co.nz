<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Sweet Temptations - Boutique Cakery | Whanganui, New Zealand" }}</title>
  <meta name="description" content="{{ description or "Sweet Temptations is a boutique cakery in Whanganui, New Zealand. We create personalised cakes, cupcakes, cookies and much more for weddings, birthdays, and all special occasions." }}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or "Sweet Temptations - Boutique Cakery" }}">
  <meta property="og:description" content="{{ description or "Personalised cakes, cupcakes, and cookies for all occasions in Whanganui, New Zealand" }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://sweettemptations.co.nz{{ page.url }}">
  <meta property="og:image" content="https://sweettemptations.co.nz/assets/logos/Sweet-Temptations-Logo-Green.png">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or "Sweet Temptations - Boutique Cakery" }}">
  <meta name="twitter:description" content="{{ description or "Personalised cakes, cupcakes, and cookies for all occasions in Whanganui, New Zealand" }}">
  <meta name="twitter:image" content="https://sweettemptations.co.nz/assets/logos/Sweet-Temptations-Logo-Green.png">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="https://sweettemptations.co.nz{{ page.url }}">
  
  <!-- Favicons -->
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/favicon/apple-touch-icon.png' | url }}">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon/favicon-32x32.png' | url }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicon/favicon-16x16.png' | url }}">
  <link rel="manifest" href="{{ '/favicon/site.webmanifest' | url }}">
  <link rel="mask-icon" href="{{ '/favicon/safari-pinned-tab.svg' | url }}" color="#fa7598">
  <link rel="shortcut icon" href="{{ '/favicon/favicon.ico' | url }}">
  <meta name="msapplication-TileColor" content="#fa7598">
  <meta name="msapplication-config" href="{{ '/favicon/browserconfig.xml' | url }}">
  <meta name="theme-color" content="#62cbc9">
  
  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/styles/output.css' | url }}">
  <style>
    html, body {
      height: 100%;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .site-content {
      flex: 1 0 auto;
    }
    .footer {
      flex-shrink: 0;
    }
  </style>
</head>
<body class="font-primary text-text-primary bg-white">
  <div class="site-content">
    {% include "components/notification-bar.njk" %}
    {% include "components/header.njk" %}
    
    <div class="">
      {{ content | safe }}
    </div>
  </div>
  
  {% include "components/footer.njk" %}
  
  <!-- Structured Data for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Bakery",
    "name": "Sweet Temptations",
    "description": "Boutique cakery creating personalised cakes, cupcakes, cookies and more for weddings, birthdays, and all special occasions",
    "url": "https://sweettemptations.co.nz",
    "logo": "https://sweettemptations.co.nz/assets/logos/Sweet-Temptations-Logo-Green.png",
    "image": "https://sweettemptations.co.nz/assets/logos/Sweet-Temptations-Logo-Green.png",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Whanganui",
      "addressRegion": "Manawatu-Wanganui",
      "addressCountry": "NZ"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "-39.9308",
      "longitude": "175.0478"
    },
    "priceRange": "$$",
    "servesCuisine": "Bakery",
    "hasMenu": "https://sweettemptations.co.nz/price-list/",
    "sameAs": [
      "https://www.facebook.com/sweettemptationsnz",
      "https://www.instagram.com/sweettemptationsnz/"
    ]
  }
  </script>
  
  <!-- Mobile menu toggle script -->
  <script>
    function toggleMenu() {
      const menu = document.getElementById('mobile-menu');
      const openPath = document.querySelector('.menu-open');
      const closePath = document.querySelector('.menu-close');
      
      if (menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
        openPath.classList.add('hidden');
        closePath.classList.remove('hidden');
      } else {
        menu.classList.add('hidden');
        openPath.classList.remove('hidden');
        closePath.classList.add('hidden');
      }
    }
  </script>
</body>
</html>
